<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Transparent Rectangle -->
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="80dp"
                android:height="50dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Colored Rectangle -->
    <item
        android:bottom="20dp">
        <shape android:shape="rectangle">
            <corners
                android:radius="4dp">

            </corners>
            <size
                android:width="80dp"
                android:height="50dp" />
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>

    <!-- Bottom Triangle -->
    <item
        android:left="60dp"
        android:right="60dp"
        android:top="20dp"
        android:bottom="20dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <size android:width="50dp"
                    android:height="50dp"/>
                <solid android:color="@color/colorPrimary" />
            </shape>
        </rotate>
    </item>

</layer-list>