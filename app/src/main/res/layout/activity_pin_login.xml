<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PinLoginActivity">




    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/imageViewStyle"
        android:src="@drawable/ic_biometric"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="10dp"
        android:id="@+id/iv_fingerprint"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_pin"
        style="@style/descText"
        android:textSize="12sp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@id/iv_fingerprint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

 <com.google.android.material.button.MaterialButton
        android:id="@+id/tv_0"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="0"
     android:textStyle="bold"
           android:textColor="?attr/textColor"
     android:background="@drawable/circle_shape"
     app:backgroundTint="?attr/colorDark"
       android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@id/tv_forgot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/tv_8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="8"
        android:textStyle="bold"
           android:textColor="?attr/textColor"
     android:background="@drawable/circle_shape"
     app:backgroundTint="?attr/colorDark"
       android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@id/tv_0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/tv_7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="7"
        android:textStyle="bold"
           android:textColor="?attr/textColor"
     android:background="@drawable/circle_shape"
     app:backgroundTint="?attr/colorDark"
       android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="40dp"

        app:layout_constraintEnd_toStartOf="@id/tv_0"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toTopOf="@id/iv_ok"
   />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/tv_9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="9"
        android:textStyle="bold"
           android:textColor="?attr/textColor"
        android:background="@drawable/circle_shape"
        app:backgroundTint="?attr/colorDark"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@id/iv_cancel"
        app:layout_constraintStart_toEndOf="@id/tv_8"
        android:layout_marginStart="40dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/tv_5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="5"
        android:textStyle="bold"
           android:textColor="?attr/textColor"
     android:background="@drawable/circle_shape"
     app:backgroundTint="?attr/colorDark"
       android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@id/tv_8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/tv_4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="4"
           android:textColor="?attr/textColor"
     android:background="@drawable/circle_shape"
     app:backgroundTint="?attr/colorDark"
       android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tv_5"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toTopOf="@id/tv_7"
   />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/tv_6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="6"
        android:textStyle="bold"
           android:textColor="?attr/textColor"
        android:background="@drawable/circle_shape"
        app:backgroundTint="?attr/colorDark"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@id/tv_9"
        app:layout_constraintStart_toEndOf="@id/tv_5"
        android:layout_marginStart="40dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/tv_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="2"
           android:textColor="?attr/textColor"
     android:background="@drawable/circle_shape"
     app:backgroundTint="?attr/colorDark"
       android:textSize="16sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@id/tv_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/tv_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="1"
   
        android:textColor="?attr/textColor"
        android:background="@drawable/circle_shape"
           app:backgroundTint="?attr/colorDark"
        android:clickable="true"
        app:rippleColor="?attr/textColor"
        android:textStyle="bold"
       android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        app:layout_constraintEnd_toStartOf="@id/tv_2"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toTopOf="@id/tv_4"
   />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/tv_3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="3"
        android:textStyle="bold"
           android:textColor="?attr/textColor"
        android:background="@drawable/circle_shape"
        app:backgroundTint="?attr/colorDark"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@id/tv_6"
        app:layout_constraintStart_toEndOf="@id/tv_2"
        android:layout_marginStart="40dp"/>
    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="0"
           android:textColor="?attr/textColor"
     android:background="@drawable/circle_shape"
        app:backgroundTint="?attr/colorDark"
        android:clickable="true"
        android:textSize="16sp"
        android:gravity="center"
        app:tint="?attr/textColor"
        android:src="@drawable/ic_cancel_pin"
        android:padding="20dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@id/tv_forgot"
        app:layout_constraintStart_toEndOf="@id/tv_0"
        android:layout_marginStart="40dp"/>
    <ImageView
        android:id="@+id/iv_ok"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="0"
           android:textColor="?attr/textColor"
     android:background="@drawable/circle_shape"
        app:backgroundTint="?attr/colorDark"
        android:clickable="true"
        android:src="@drawable/ic_ok"
        app:tint="?attr/textColor"
        android:padding="20dp"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@id/tv_forgot"
        app:layout_constraintEnd_toStartOf="@id/tv_0"
        android:layout_marginEnd="40dp"/>

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="20dp"
        android:layout_height="20dp"

        android:src="@drawable/circle_outline"
        app:tint ="?attr/textColor"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@id/tv_1"
        app:layout_constraintStart_toStartOf="@id/tv_1"
        android:layout_marginStart="40dp"/>
 <ImageView
        android:id="@+id/iv_2"
        android:layout_width="20dp"
        android:layout_height="20dp"

     android:src="@drawable/circle_outline"
     app:tint ="?attr/textColor"
     
        android:gravity="center"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@id/tv_1"
        app:layout_constraintStart_toEndOf="@id/iv_1"
        android:layout_marginStart="10dp"/>
 <ImageView
        android:id="@+id/iv_3"
        android:layout_width="20dp"
        android:layout_height="20dp"

     android:src="@drawable/circle_outline"
     app:tint ="?attr/textColor"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@id/tv_1"
        app:layout_constraintStart_toEndOf="@id/iv_2"
        android:layout_marginStart="10dp"/>
    <ImageView
        android:id="@+id/iv_4"
        android:layout_width="20dp"
        android:layout_height="20dp"

    
     android:src="@drawable/circle_outline"
        app:tint ="?attr/textColor"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@id/tv_1"
        app:layout_constraintStart_toEndOf="@id/iv_3"
        android:layout_marginStart="10dp"/>
    <ImageView
        android:id="@+id/iv_5"
        android:layout_width="20dp"
        android:layout_height="20dp"

      
     android:src="@drawable/circle_outline"
        app:tint ="?attr/textColor"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@id/tv_1"
        app:layout_constraintStart_toEndOf="@id/iv_4"
        android:layout_marginStart="10dp"/>
 <ImageView
        android:id="@+id/iv_6"
        android:layout_width="20dp"
        android:layout_height="20dp"

     app:tint ="?attr/textColor"
     android:src="@drawable/circle_outline"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@id/tv_1"
        app:layout_constraintStart_toEndOf="@id/iv_5"
        android:layout_marginStart="10dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/enter_pin"
        style="@style/descTextBold"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/lin_logo"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@id/iv_1"
    app:layout_constraintStart_toStartOf="@id/tv_1"
app:layout_constraintEnd_toEndOf="@id/tv_3"/>
    <LinearLayout
        android:id="@+id/lin_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:visibility="gone"
   app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">



        <ImageView

            android:id="@+id/iv_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
           />

        <ImageView
            android:id="@+id/iv_logo_name"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:scaleType="centerInside"

            android:contentDescription="@string/app_name"
            android:layout_centerInParent="true"
            app:layout_constraintTop_toTopOf="@id/iv_logo"
            app:layout_constraintLeft_toRightOf="@id/iv_logo"
            app:layout_constraintBottom_toBottomOf="@id/iv_logo"
            android:src="@drawable/ic_tux_wallet"
            style="@style/imageViewStyle"


            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>